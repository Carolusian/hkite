{{!< default}}
<main role="main" class="site-body">
	<article id="hero" class="hero-meetup hero-meetup--next">
		<section class="hero-intro hero-intro--hasmask">
            <div class="hero-background"></div>
            <div class="hero-intro-content">
                <h5 class="subtitle">Next Meetup</h5>
                <h1 class="title">Charles Bridge and Node, Express, Mongo, etc</h1>
                <p class="byline"><strong>Wed, 21 Jan 2015 — 6:00pm - 9:00pm</strong></p>
                <p class="byline">Level 6, 341 CityU (Hong Kong) — <a href="http://maps.google.com.au/?daddr=Level 6, 341 CityU (Hong Kong)" target="_blank">Directions</a></p>
                </div>
                <div class="hero-button"><div id="next-meetup" data-id="54b3a33ca9affc020091eda0"><div class="alert alert-success mb-0 text-center">No more seats...</div>
                </div>
            </div>
        </section>
        <section id="posts" class="page-content">
            <div class="container">
                <div class="timeline">
                    <div class="timeline-path"></div>
                    <div class="timeline-item--offset"></div>
                    {{# each data.posts}}
                    <div class="timeline-item timeline-item-{{listColumn}}">
                        <div class="timeline-item-node"></div>
                        <a href="{{link}}" rel="{{linkTitle}}" target="_blank" class="timeline-item-inner">
                            <h6 class="text-caps text-danger"></h6>
                            <h4>{{{title}}}</h4>
                            {{{content}}}
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
	</article>
</main>
